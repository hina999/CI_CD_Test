@model FXAdminTransferConnex.Entities.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/Content/css/core.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .field-validation-error {
            color: #b90000;
            font-size: 12px;
            float: left;
            width: 100%;
            text-align: left;
            padding: 3px 0;
        }
    </style>
</head>
<body>


    <div class="main_container">
        <div class="login-wrapper login-screen">
            @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { @class = "login", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="mb-20" align="center">
                    <img src="~/Images/transfer-connex-logo.png" alt="Transfer Connex">
                </div>
                <div class="login-block">
                    <h1>Forgot Password</h1>
                </div>
                <div class="user-input">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", type = "email", @autofocus = "" })
                    <i class="fa fa-user-o"></i>
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="submit_button">
                    <button class="btn-submit reset-submit">Submit</button>
                    @Html.ActionLink("Cancel", "Login", "Login", new { @class = "btn btn-default cancel_button", title = "Cancel" })
                </div>
            }
        </div>
    </div>
</body>
</html>

