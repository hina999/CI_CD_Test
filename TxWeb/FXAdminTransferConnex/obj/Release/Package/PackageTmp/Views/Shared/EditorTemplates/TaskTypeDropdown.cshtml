@using Kendo.Mvc.UI
@model object


@(Html.Kendo().DropDownListFor(m => m)
    .Name("TaskTypeId")
    .OptionLabel("Select Task Type")
    .DataTextField("TaskType")
    .DataValueField("TaskTypeId").HtmlAttributes(new { @style = "width:100% !important;" })
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetTaskTypeList", "Common");
        });
    }))

