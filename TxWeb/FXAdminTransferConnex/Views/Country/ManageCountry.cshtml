

@using Kendo.Mvc.UI;
@using FXAdminTransferConnex.Entities;
@using FXAdminTransferConnexApp
@using FXAdminTransferConnex.Common

@model FXAdminTransferConnex.Entities.CountryMasterModel

@{
    ViewBag.Title = "ManageCountry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ManageCountry", "Country", FormMethod.Post))
{

    @Html.HiddenFor(m => m.CountryID)
    <div class="panel panel-default">
        <div class="panel-body">
            <h2 class="category-title">
                Country Detail
            </h2>

            <div class="row">

                <div class="col-sm-12">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label class="control-label">Country Name:</label>
                            @Html.TextBoxFor(m => m.CountryName, new { @placeholder = "Country name", @class = "form-control", @tabindex = "1" })
                            @Html.ValidationMessageFor(m => m.CountryName)

                            @(Html.Kendo().DropDownListFor(m => m.RegionID)
                                    .Name("RegionID")
                                    .OptionLabel("--Select Region --")
                                    .DataTextField("RegionName")
                                    .DataValueField("RegionID").HtmlAttributes(new { @style = "width:100% !important;", @tabindex = "6" })
                                    .DataSource(source =>
                                    {
                                        source.Read(read =>
                                        {
                                            read.Action("GetRegionListForDisplay", "Region");
                                        });
                                    }))                          
                        </div>









                        @*<div class="form-group">
                                <label class="control-label">Password:</label>
                                @Html.TextBoxFor(m => m.Password, new { @placeholder = "Password", @class = "form-control", @tabindex = "6", @type = "password" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>*@
                    </div>
                </div>


                <div class="col-md-12">
                    <a href="@Url.Action("Index","Country")" class="btn btn-orange mt-5 mr-10 pull-right" tabindex="16">Cancel</a>
                    <button class="btn btn-orange mt-5 mr-10 pull-right" type="submit" tabindex="15">Save</button>
                </div>

            </div>
        </div>
    </div>

}

