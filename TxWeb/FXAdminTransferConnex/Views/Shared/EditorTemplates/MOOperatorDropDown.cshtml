@using Kendo.Mvc.UI
@model object


@(Html.Kendo().DropDownListFor(m => m)
      .Name("ConditionId")
      .OptionLabel("Select Condition")
      .DataTextField("OperatorStr")
      .DataValueField("ConditionalOperatorID").HtmlAttributes(new { @style = "width:100% !important;" })
      .DataSource(source =>
      {
          source.Read(read =>
          {
              read.Action("GetConditionalOperatorList", "Client");
          });
      }))


