@using Kendo.Mvc.UI

@model object


@(Html.Kendo().DropDownListFor(m => m)
              .Name("CommunicationType")
              .OptionLabel("Select Communication Type")
              .DataTextField("TypeName")
              .DataValueField("CommunicationTypeId").HtmlAttributes(new {  @style="width:100% !important;"})
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetCommunicationTypeList", "Client");
                  });
              }))