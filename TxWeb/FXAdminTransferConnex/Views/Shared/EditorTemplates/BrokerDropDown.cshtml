@using Kendo.Mvc.UI

@model object


@(Html.Kendo().DropDownListFor(m => m)
              .Name("UserId")
              .OptionLabel("Select Broker")
              .DataTextField("FullName")
                  .DataValueField("UserId").HtmlAttributes(new { @style = "width:100% !important;" })
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetBrokerList", "Client");
                  });
              }))
