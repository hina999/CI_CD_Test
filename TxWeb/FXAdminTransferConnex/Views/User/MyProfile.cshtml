@using Kendo.Mvc.UI
@model FXAdminTransferConnex.Entities.UserModel
<div class="page-container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    My Profile
                </h4>
            </div>
            <div class="panel panel-flat">
                <div class="panel-body">
                    @using (Html.BeginForm("MyProfile", "User", FormMethod.Post, new { }))
                    {
                        <div class="row">
                            <div class="col-sm-12">
                                @Html.HiddenFor(m => m.UserId)
                                @Html.HiddenFor(m => m.IsActive)
                                <div class="col-md-6">

                                    <label class="control-label" for="FirstName">First Name :</label>
                                    <div class="txtin">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Enter First Name" })
                                        @Html.ValidationMessageFor(m => m.FirstName)
                                        @*<input type="text" class="form-control" id="FirstName" placeholder="Enter First Name">*@
                                    </div>

                                    <label class="control-label" for="Email">Email :</label>
                                    <div class="txtin">
                                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @placeholder = "Enter Email Address" })
                                        @Html.ValidationMessageFor(m => m.EmailAddress)
                                    </div>


                                </div> @*End of left part*@

                                <div class="col-md-6">

                                    <label class="control-label" for="Website">Last Name :</label>
                                    <div class="txtin">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Enter Last Name" })
                                        @Html.ValidationMessageFor(m => m.LastName)
                                    </div>

                                    <label class="control-label" for="CompanyNo">User Type :</label>
                                    <div class="txtin">

                                        @(Html.Kendo().DropDownListFor(m => m)
                                       .Name("UserTypeId")
                            //.OptionLabel("Select Role")
                                       .BindTo(EnumHelper.GetSelectList(new FXAdminTransferConnex.Entities.SystemEnum.UserType().GetType()))
                                       .HtmlAttributes(new { style = "width: 100%" })
                                        )

                                    </div>

                                </div> @*End of right part*@

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 ">
                                <a href="@Url.Action("Users","User")" class="btn btn-orange mt-5 mr-15 pull-right" tabindex="8">Cancel</a>
                                <button class="btn btn-orange mt-5 mr-10 pull-right" type="submit">Save</button>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
